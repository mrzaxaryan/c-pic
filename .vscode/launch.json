{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows i386",
            "type": "lldb-dap",
            "request": "launch",
            "program": "${workspaceFolder}/bin/windows/windows_i386.exe",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "i386-pc-windows-gnu"
        },
        {
            "name": "Windows x86_64",
            "type": "lldb-dap",
            "request": "launch",
            "program": "${workspaceFolder}/bin/windows/windows_x86_64.exe",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "x86_64-pc-windows-gnu",
        },
        {
            "name": "Windows ARM7A",
            "type": "lldb-dap",
            "request": "launch",
            "program": "${workspaceFolder}/bin/windows/windows_arm7a.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "armv7a-pc-windows-msvc"
        },
        {
            "name": "Windows AARCH64",
            "type": "lldb-dap",
            "request": "launch",
            "program": "${workspaceFolder}/bin/windows/windows_aarch64.exe",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "preLaunchTask": "aarch64-pc-windows-msvc"
        },
        {
            "name": "Linux i386 (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/linux/linux_i386.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "pipeTransport": {
                "pipeProgram": "wsl",
                "pipeArgs": [],
                "debuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "i386-unknown-linux-gnu"
        },
        {
            "name": "Linux x86_64 (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/linux/linux_x86_64.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "pipeTransport": {
                "pipeProgram": "wsl",
                "pipeArgs": [],
                "debuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "x86_64-unknown-linux-gnu"
        },
        {
            "name": "Linux AARCH64 (WSL)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/linux/linux_aarch64.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "pipeTransport": {
                "pipeProgram": "wsl",
                "pipeArgs": [],
                "debuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "aarch64-unknown-linux-gnu"
        }
    ]
}